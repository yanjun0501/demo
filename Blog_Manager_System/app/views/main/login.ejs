<%- include ../common/header_lr %>
	<article>
		<% if(message) { %>
			<div class="blog_mt50 alert alert-danger">
				<%= message %>
			</div>
			<% } %>
				<div class="container">
					<div class="row">
						<form class="form-horizontal login_form col-lg-12  col-md-12 col-ms-12 col-xs-12 " method="POST" action="/api/user/login">
							<div class="form-group">
								<label class="col-sm-2 col-sm-offset-1 control-label" for="signinName">用户名</label>
								<div class=" col-sm-6">
									<input class="form-control ver" id="signinName" name="user[name]" type="text" />
									<p class="msg">请输入用户名</p>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 col-sm-offset-1 control-label" for="signinPwd">密码</label>
								<div class=" col-sm-6">
									<input class="form-control ver" id="signinPwd" name="user[password]" type="password" />
									<p class="msg">请输入密码</p>
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-offset-3 col-sm-2">
									<button class="btn btn-default" id="login_btn" type="submit">提交</button>
								</div>
							</div>
						</form>
					</div>
				</div>
				<canvas id="loginCanvas"></canvas>
	</article>
	<!-- jQuery文件。务必在bootstrap.min.js 之前引入 -->
	<script src="//cdn.bootcss.com/jquery/1.11.3/jquery.min.js"></script>
	<!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
	<script src="//cdn.bootcss.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
	<script type="text/javascript" src="/assets/login.js" charset="utf-8"></script>
	</body>

	</html>