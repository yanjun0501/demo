<%- include ../common/header %>
	<section>
		<div class="blog_wrapper blog_wrap_tagimg">
			<div class="clearfix container">
				<div class="row">
					<div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
						<h1 class="header_title">
							<%= title %>
						</h1>
					</div>
				</div>
			</div>
		</div>
	</section>
	<div class="blog_tag">
		<div class="row">
			<div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
				<span class="blog_fl blog_cw">常用标签</span>
				<% tags.forEach(function(tag,index) { %>
					<span class="blog_tag_link">
					<a href="/article/tag/<%= tag._id %>"><%= tag.name %></a>
				</span>
					<% }) %>
			</div>
		</div>
	</div>
	<div id="back_top">
		<a href="#top"></a>
	</div>
	<article class="blog_tag_content">
		<div class="container">
			<div class="row">
				<% tag.articles.forEach(function (article, index) { %>
					<figure class="col-lg-4 col-md-6 col-sm-6">
						<a class="thumbnail blog_tag_article" href="/article/<%= article._id %>">
						<img src="/images/tag<%= index%3+1 %>.jpg">
						<figcaption class="caption">
							<h5><%= article.title %></h5>
						</figcaption>
					</a>
					</figure>
					<% }) %>
			</div>
		</div>
	</article>
	<!-- jQuery文件。务必在bootstrap.min.js 之前引入 -->
	<script src="//cdn.bootcss.com/jquery/1.11.3/jquery.min.js"></script>
	<!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
	<script src="//cdn.bootcss.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
	<script type="text/javascript" src="/assets/tag.js" charset="utf-8"></script>
	<%- include ../common/footer %>